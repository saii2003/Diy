@model pc.Models.UpdateProductView

@{
    ViewBag.Title = "編輯商品";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
  <li>後端管理</li>
  <li>@Html.ActionLink("商品清單", "list","Manage")</li>
  <li>@Html.ActionLink("訂單管理", "order","Manage")</li>
</ul>

<h4>編輯商品</h4>
@using (Html.BeginForm())
{
    <input type="hidden" name="previousUrl" value="@Model.previousUrl" />
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">名稱</span>
            @Html.TextBoxFor(p => p.name, new { @class = "form-control", @Value = ViewData["name"] })
        </div>
            @Html.ValidationMessageFor(p => p.name)
    </div>
    <div class="form-group">
        <div class="inupt-group">
  
            @Html.DropDownListFor(p => p.cid, (IEnumerable<SelectListItem>)ViewBag.category, new { @class = "form-control" })
        </div>
            @Html.ValidationMessageFor(p => p.cid)
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">售價</span>
            @Html.TextBoxFor(p => p.price, new { @class = "form-control", @Value = ViewData["price"] })
        </div>
            @Html.ValidationMessageFor(p => p.price)
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">庫存</span>
            @Html.TextBoxFor(p => p.instock, new { @class = "form-control", @Value = ViewData["instock"] })
        </div>
            @Html.ValidationMessageFor(p => p.instock)
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">圖片</span>
            @Html.TextBoxFor(p => p.image, new { @class = "form-control", @Value = ViewData["image"] })
        </div>
            @Html.ValidationMessageFor(p => p.image)
    </div>
    @Html.ValidationSummary(true)
    <input type="submit" class="btn btn-primary" value="編輯"/>
}