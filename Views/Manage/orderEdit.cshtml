@model pc.Models.orderEditView

@{
    ViewBag.Title = "orderEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
  <li>後端管理</li>
  <li>@Html.ActionLink("訂單管理","order","Manage")</li>

</ul>
<h2>編輯訂單</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
    <label>訂單編號</label>
    @ViewData["id"]
    </div>
    <div class="form-group">
    <label>會員Id</label>
    @ViewData["uid"]
    </div>
    
    <div class="form-group">
    <label>收件者</label>
    @Html.TextBoxFor(m => m.receiver, new { @class = "form-control", @Value = ViewData["receiver"] })
    @Html.ValidationMessageFor(m=>m.receiver)
    </div>
    
    <div class="form-group">
    <label>電話</label>
    @Html.TextBoxFor(m => m.phone, new { @class = "form-control", @Value = ViewData["phone"] })
    @Html.ValidationMessageFor(m=>m.phone)
    </div>
    
    <div class="form-group">
    <label>地址</label>
    @Html.TextBoxFor(m => m.address, new { @class = "form-control", @Value = ViewData["address"] })
    @Html.ValidationMessageFor(m=>m.address)
    </div>
    
    <div class="form-group">
    <label>價格</label>
    @Html.TextBoxFor(m => m.price, new { @class = "form-control", @Value = ViewData["price"] })
    @Html.ValidationMessageFor(m=>m.price)
    </div>

    
    <div class="form-group">
    <label>付款</label>
    @Html.CheckBoxFor(m=>m.payment,@ViewData["payment"])
    </div>
    
    <div class="form-group">
    <label>出貨</label>
    @Html.CheckBoxFor(m=>m.shipment,@ViewData["shipment"])
    </div>
    <input type="submit" value="編輯" class="btn btn-primary" />                                
}
