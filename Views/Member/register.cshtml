@model pc.Models.MemberRegView

@{
    ViewBag.Title = "註冊";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/register.css");                                    
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="text-default"><h3>註冊</h3></div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                @Html.TextBoxFor(m => m.members.username, new { @class = "form-control", @placeholder = "使用者名稱"})
            </div>
            @Html.ValidationMessageFor(m => m.members.username)
        </div>
    
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "密碼" })
            </div>
            @Html.ValidationMessageFor(m => m.password)
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.PasswordFor(m => m.confirm_password, new { @class = "form-control", @placeholder = "確定密碼" })
               
            </div>
             @Html.ValidationMessageFor(m => m.confirm_password)
        </div>
        
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                 @Html.TextBoxFor(m => m.members.name, new { @class = "form-control", @placeholder = "姓名" })
            </div>
            @Html.ValidationMessageFor(m => m.members.name)
        </div>
   
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-heart"></span></span>
                <div class="gender">
                    @Html.RadioButtonFor(m => m.members.gender, "男", new { @checked = "checked" }) 男
                    @Html.RadioButtonFor(m => m.members.gender, "女") 女
                </div>
            </div>
            @Html.ValidationMessageFor(m => m.members.gender)
        </div>
  
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                @Html.TextBoxFor(m => m.members.birthday, new { @id = "birthday", @class = "form-control", @placeholder = "出生日期 格式:1982/03/01" })
            </div>
            @Html.ValidationMessageFor(m => m.members.birthday)
        </div>
    
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                @Html.TextBoxFor(m => m.members.phone, new { @class = "form-control", @placeholder = "電話" })
            </div>
            @Html.ValidationMessageFor(m => m.members.phone)
        </div>
    
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-home"></span></span>
                @Html.TextBoxFor(m => m.members.address, new { @class = "form-control", @placeholder = "地址" })
            </div>
            @Html.ValidationMessageFor(m => m.members.address)
        </div>
    
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                @Html.TextBoxFor(m => m.members.email, new { @class = "form-control", @placeholder = "電子郵件" })
            </div>
            @Html.ValidationMessageFor(m => m.members.email)
        </div>

   @Html.ValidationSummary(true)
        <input class="btn btn-lg btn-primary btn-block" type=submit value="註冊" style="margin:20px 0px 0px 0px;">
         
}    


